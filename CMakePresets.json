{
  "version": 3,
  "configurePresets": [
    {
      "name": "gcc-debug",
      "displayName": "GCC Debug",
      "description": "Build with GCC in Debug mode",
      "generator": "MinGW Makefiles",
      "binaryDir": "${sourceDir}/build/build_targets/gcc/debug",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "CMAKE_C_COMPILER": "C:/msys64/ucrt64/bin/gcc.exe",
        "CMAKE_CXX_COMPILER": "C:/msys64/ucrt64/bin/g++.exe",
        "CMAKE_PREFIX_PATH": "${sourceDir}/libs_install/gcc/debug/Catch2",
        "CMAKE_CXX_STANDARD": "23"
      }
    },
    {
      "name": "gcc-release",
      "displayName": "GCC Release",
      "description": "Build with GCC in Release mode",
      "generator": "MinGW Makefiles",
      "binaryDir": "${sourceDir}/build/build_targets/gcc/release",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
