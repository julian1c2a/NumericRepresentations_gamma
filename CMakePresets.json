        "CMAKE_PREFIX_PATH": "${sourceDir}/libs_install/gcc/release/Catch2",
        "CMAKE_CXX_STANDARD": "23"
      }
    },
    {
      "name": "clang-debug",
      "displayName": "Clang Debug",
      "description": "Build with Clang in Debug mode",
      "generator": "MinGW Makefiles",
      "binaryDir": "${sourceDir}/build/build_targets/clang/debug",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "CMAKE_C_COMPILER": "C:/msys64/clang64/bin/clang.exe",
        "CMAKE_CXX_COMPILER": "C:/msys64/clang64/bin/clang++.exe",
        "CMAKE_PREFIX_PATH": "${sourceDir}/libs_install/clang/debug/Catch2;C:/msys64/clang64",
        "CMAKE_CXX_STANDARD": "23",
        "CMAKE_CXX_FLAGS": "-stdlib=libc++ -I/c/msys64/clang64/include/c++/v1 -I/c/msys64/clang64/include",
        "CMAKE_EXE_LINKER_FLAGS": "-L/c/msys64/clang64/lib -lc++ -lc++abi"
